{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "rootDir": "./src",
    "outDir": "./lib",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
